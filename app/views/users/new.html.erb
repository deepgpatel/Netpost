<h1 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  New User Form
</h1>

<%= form_for(@user) do |f| %>

  <div align="center"><%= f.label :name  %></div>
  <div align="center"><%= f.text_field :name %><br></div>

  <div align="center"><%= f.label :username %></div>
  <div align="center"><%= f.text_field :username %><br></div>

  <div align="center"><%= f.label :password %></div>
  <div align="center"><%= f.text_field :password %><br></div>

  <div align="center"><%= f.submit "Create Account" %><br></div>

  <% end  %>
