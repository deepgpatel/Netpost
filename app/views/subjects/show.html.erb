<div><h2><%= @subject.title %></h2></div>

 <% if current_user.subjects.include?(@subject) %>
  <%= button_to("Unfollow", unfollow_subject_path, :method => :delete, params: {subject_id: @subject.id}) %>
<% else %>
  <%= button_to("Follow", user_path(current_user), :method => :patch, params: {subject_id: @subject.id}) %>
<% end %>


<div><button><%= link_to "Home", user_url %></button></div>
<div><button><%= link_to "Create New Post", new_post_path %></button></div>
<% @subject.posts.each do |post| %>
  <%= link_to post.title, post %></br>



<% end %>
